<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagens</button></a>

{{#each postagens}}
<div class="card">
    <div class="card-body mt-4">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>

        <a href="postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagens</button></a>
        <a href="postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagens</button></a>
    </div>
</div>
    

{{else}}
<p>Nenhuma postagens registrada</p>

{{/each}}